<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="workoutPlanner" class="com.example.springcore_collectiondemo_2.WorkoutPlanner">
        <property name="exercises">
            <list>
                <value>Push-ups</value>
                <value>Squats</value>
                <value>Plank</value>
                <value>Running</value>
                <value>Jumping Jacks</value>
                <value>Jumba Dance</value>
            </list>
        </property>
    </bean>

    <bean id="attendanceTracker" class="com.example.springcore_collectiondemo_2.AttendanceTracker">
        <constructor-arg>
            <map>
                <entry key="Ankit" value="80"/>
                <entry key="Ashok" value="65"/>
                <entry key="Banty" value="72"/>
                <entry key="Sourav" value="90"/>
                <entry key="Abdul" value="60"/>
            </map>
        </constructor-arg>
    </bean>

<!-- Shopping Recommender Bean -->
    <bean id="shoppingRecommender" class="com.example.springcore_collectiondemo_2.ShoppingRecommender">

        
        <property name="preferredCategories">
            <array>
                <value>Electronics</value>
                <value>Books</value>
            </array>
        </property>

       
        <property name="recentViews">
            <list>
                <value>Laptop</value>
                <value>Novel</value>
            </list>
        </property>

        
        <property name="productCategoryMap">
            <map>
                <entry key="Laptop" value="Electronics"/>
                <entry key="Headphones" value="Electronics"/>
                <entry key="Novel" value="Books"/>
                <entry key="Comics" value="Books"/>
                <entry key="Shoes" value="Fashion"/>
            </map>
        </property>
    </bean>

</beans>