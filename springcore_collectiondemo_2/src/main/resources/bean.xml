<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="workoutPlanner" class="com.example.springcore_collectiondemo_2.WorkoutPlanner">
        <property name="exercises">
            <list>
                <value>Push-ups</value>
                <value>Squats</value>
                <value>Plank</value>
                <value>Running</value>
                <value>Jumping Jacks</value>
                <value>Jumba Dance</value>
            </list>
        </property>
    </bean>

    <bean id="attendanceTracker" class="com.example.springcore_collectiondemo_2.AttendanceTracker">
        <constructor-arg>
            <map>
                <entry key="Ankit" value="80"/>
                <entry key="Ashok" value="65"/>
                <entry key="Banty" value="72"/>
                <entry key="Sourav" value="90"/>
                <entry key="Abdul" value="60"/>
            </map>
        </constructor-arg>
    </bean>


</beans>