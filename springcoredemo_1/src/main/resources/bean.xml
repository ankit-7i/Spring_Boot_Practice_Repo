<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">



    <!--Bean 1-->
    <bean id="outfitSuggester" class="com.example.springcoredemo_1.OutfitSuggester">
        <constructor-arg value="15" /> 
    </bean>
    <!--Bean 2-->
    <bean id="ticketPriceCalculator" class="com.example.springcoredemo_1.TicketPriceCalculator">
        <constructor-arg value="20" />
    </bean>
    <!--Bean 3-->
    <bean id="billCalculator" class="com.example.springcoredemo_1.BillCalculator">
        <constructor-arg value="134" />
    </bean>
    <!--Bean 4-->
    <bean id="dataUsageBillCalculator" class="com.example.springcoredemo_1.DataUsageBillCalculator">
        <constructor-arg value="15" />
    </bean>


    <!--Bean 5-->
    <!--Setter Injection-->
     <bean id="mileageEvaluator" class="MileageEvaluator">
        <property name="distance" value="450"/>
        <property name="fuelUsed" value="25"/>
    </bean>


</beans>